<%= form_for @listing do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :max_guests %>
    <%= form.number_field :max_guests %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :Images %>
    <%= form.file_field :avatars, multuple: true %>
  </div>

  <div>
    <%= form.submit "Submit" %>
  </div>

<% end %>